  "carbonio-certbot"
  "carbonio-core"
  "carbonio-memcached"
  "carbonio-nginx"
  "carbonio-prometheus-nginx-exporter"
  "sqlite"
)
source=(
  "${pkgname}-setup.sh"
  "${pkgname}-sidecar.service"
  "${pkgname}.hcl"
  "${pkgname}.target"
  "${pkgname}.sh"
  "carbonio-clamav-signature-provider-setup.sh"
  "carbonio-clamav-signature-provider-sidecar.service"
